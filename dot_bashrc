if [[ $- != *i* ]]; then
  # Shell is non-interactive.  Be done now!
  return
fi


if command -v tmux &>/dev/null && [[ ! "$TERM" =~ screen ]] && [[ ! "$TERM" =~ tmux ]] && [ -z "$TMUX" ]; then
 tmux
fi

export LANG="${LANG:-en_US.UTF-8}"

# NOTE: DOTFILES_DIR must exist for sourced files below to work.
# This path is hardcoded because the bashrc sources additional files from the
# dotfiles repo (aesthetics.sh, completions.sh, etc.). A future migration
# could inline these files or use chezmoi templates for portability.
export DOTFILES_DIR="$HOME/code/personal/dotfiles"
export BASHFILES_DIR="$DOTFILES_DIR/archive/legacy/bash"
export BLESH_DIR="$HOME/.local/share/blesh"
export XDG_CONFIG_HOME="$HOME/.config"

# Shell variables
export PAGER=less
export EDITOR=vim

export LESS='-R'

__prefix_paths=(
  "/opt/local/bin"
  "/usr/lib/cw" # think this is an arch thing
)
for entry in "${__prefix_paths[@]}"; do
  # if not present and dir exists
  if [[ "${PATH#*$entry:}" == "$PATH" ]] && [ -d "$entry" ]; then
    PATH="$entry:$PATH"
  fi
done

__postfix_paths=(
  "/home/linuxbrew/.linuxbrew/opt/coreutils/libexec/gnubin"
  "/var/lib/snapd/snap/bin"
  "/home/linuxbrew/.linuxbrew/bin"
  "$HOME/.local/bin"
  "$HOME/.cargo/bin"
)
for entry in "${__postfix_paths[@]}"; do
  # if not present and dir exists
  if [[ "${PATH#*:$entry}" == "$PATH" ]] && [ -d "$entry" ]; then
    PATH="$PATH:$entry"
  fi
done

## shopt & set options
shopt -s cdspell                # This will correct minor spelling errors in a cd command.
shopt -s histappend             # Append to history rather than overwrite
shopt -s checkwinsize           # Check window after each command
shopt -s dotglob                # files beginning with . to be returned in the results of path-name expansion.
shopt -s extglob                # use extended globbing
set -o noclobber                # prevent overwriting files with cat
set -o ignoreeof                # stops ctrl+d from logging me out
# unsupported by macos /bin/bash
shopt -s direxpand 2> /dev/null # prevent dir expansion and $ escaping in tab complete
shopt -s globstar  2> /dev/null # ** matches ./ and subdirs recursively. Cannot be used for files

# make the terminal give up control of ctrl-s and ctrl-q
stty -ixon -ixoff
stty stop undef

# vim-mode settings
set -o vi
stty time 0                 # 1/10 s
bind 'set keyseq-timeout 1' #ms
# set -sg escape-time 1 # ms

function _set_user_friendly_aliases {
  case $(uname -s) in
    Darwin | FreeBSD) alias ls="ls -hFG" ;;
    Linux) alias ls="ls --color=always -hF" ;;
    NetBSD | OpenBSD) alias ls="ls -hF" ;;
  esac

  alias rm="rm -i"
  alias mv="mv -i"
  alias cp="cp -i"
  alias mkdir='mkdir -p -v'
  alias df='df -h'
  alias du='du -h -c'
  alias lsd="ls -hdlf */"
  alias ll="ls -hl"
  alias l="ls"

  # vim-mode exit
  alias ":q"="exit"
}
_set_user_friendly_aliases

alias manage_memory="sudo ncdu -e $@"
alias vim=nvim


#shopt -s extdebug; trap "tput sgr0" DEBUG


source "$BASHFILES_DIR/aesthetics.sh"
source "$BASHFILES_DIR/completions.sh"
source "$BASHFILES_DIR/prompt_and_history.sh"
source "$BASHFILES_DIR/utils.sh"
source "$DOTFILES_DIR/archive/legacy/vscode/init.sh"

case $(uname -s) in
  Darwin | FreeBSD) source "$DOTFILES_DIR/macos/macos.sh" ;;
  Linux) source "$DOTFILES_DIR/archive/legacy/blackbox/blackbox.sh" ;;
esac



